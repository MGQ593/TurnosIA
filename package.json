{
  "name": "sistema-turnos-nodejs",
  "version": "1.0.0",
  "description": "Sistema de gesti√≥n de turnos con IA y WhatsApp usando Node.js + Express + TypeScript + PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/index.ts",
    "dev:frontend": "node scripts/build-frontend.js --watch",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "node scripts/build-frontend.js",
    "heroku-postbuild": "npm run build",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit && tsc --project tsconfig.frontend.json --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "turnos",
    "nodejs",
    "express",
    "typescript",
    "postgresql",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "qrcode": "^1.5.4",
    "zod": "^3.23.8",
    "typescript": "^5.6.2",
    "esbuild": "^0.25.11",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@types/pg": "^8.11.6",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.11.1",
    "tsx": "^4.19.1"
  }
}
